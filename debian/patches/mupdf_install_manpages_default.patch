From: Kan-Ru Chen <koster@debian.org>
Subject: Install manpages on default install target
---
 Makefile |    9 ++++++++-
 1 file changed, 8 insertions(+), 1 deletion(-)

--- a/Makefile
+++ b/Makefile
@@ -303,6 +303,12 @@
 
 APPS = $(PDFSHOW_EXE) $(PDFCLEAN_EXE) $(PDFDRAW_EXE) $(PDFEXTRACT_EXE) $(PDFINFO_EXE) $(PDFVIEW_EXE)
 
+APPS_MAN = \
+	apps/man/mupdf.1 \
+	apps/man/pdfclean.1 \
+	apps/man/pdfdraw.1 \
+	apps/man/pdfshow.1
+
 $(OBJDIR)/%.o: apps/%.c
 	$(CC_CMD)
 
@@ -378,7 +384,8 @@
 	rm -rf build
 
 install: $(OBJDIR) $(GENDIR) $(MUPDF_LIB) $(APPS)
-	install -d $(prefix)/bin $(prefix)/lib $(prefix)/include
+	install -d $(prefix)/bin $(prefix)/lib $(prefix)/include $(prefix)/share/man/man1
 	install $(APPS) $(prefix)/bin
+	install $(APPS_MAN) $(prefix)/share/man/man1
 	install $(MUPDF_LIB) $(prefix)/lib
 	install $(MUPDF_HDR) $(prefix)/include
