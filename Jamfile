rule HexDump
{
	DEPENDS $(<) : $(>) ;
	Clean clean : $(<) ;
}

actions HexDump
{
	xxd -i $(>) | sed -e 's/data_//g;s/, /,/g' > $(<) ;
}

HexDump data/Dingbats.c : data/Dingbats.cff ;
HexDump data/NimbusMonL-Bold.c : data/NimbusMonL-Bold.cff ;
HexDump data/NimbusMonL-BoldObli.c : data/NimbusMonL-BoldObli.cff ;
